{
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "module": "CommonJS",
        "lib": [
            "ES2017",
        ],
        "allowJs": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src",
        "src/@types"
    ],
    "exclude": [
        "node_modules"
    ],
}
